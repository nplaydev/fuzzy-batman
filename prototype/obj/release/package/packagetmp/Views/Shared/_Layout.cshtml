<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/App/style")
    @Scripts.Render("~/bundles/modernizr")

</head>
    <body>

        <div id="header" class="navbar navbar-inverse" role="navigation">



                        <!--tablet Container-->
                        <div class="hide show-1050">
                            <div class="col-xs-1 col"><a href="#"><img src="~/Content/images/icons/menu-wht.png" width="36px" /></a></div>
                            <div class="col-xs-8 col">
                                <div class="search-field">
                                    <img src="~/Content/images/icons/search-wht.png" />
                                    <input type="text" placeholder="200 results found in 32225" />
                                </div>
                            </div>
                            <div class="col-xs-1 col"><a href="#"><img src="~/Content/images/icons/settings-wht.png" width="36px" /></a></div>
                            <div class="col-xs-1 col"><a href="#"><img src="~/Content/images/icons/sort-wht.png" width="36px" /></a></div>
                            <div class="col-xs-1 col"><a href="#"><img src="~/Content/images/icons/map-pin-wht.png" width="36px" /></a></div>
                        </div>


                        <!-- Web Container-->

                        <div class="container-fluid hide-1050">
                            <div class="row">
                                <div class="logo-container col-lg-6">
                                    <a href="/" class="pull-left">
                                        <img class="logo  hide-1550" src="~/Content/images/logo/logo-full.png" height="40px"/>
                                        <img class="logo hide show-1550 margin-top-15" src="~/Content/images/logo/logo-mark.png" height="30px"/>
                                    </a>


                                    <ul class="nav nav-pills pull-left margin-left-20 hide-1050">
                                        <li class="margin-left-20">
                                            <a href="/home/search" class="active">Search Homes</a>
                                        </li>
                                        <li><a href="#">My Collections</a></li>
                                        <li><a href="#">My Messages</a></li>
                                        <li><a href="#">Find an Agent</a></li>
                                    </ul>
                                </div>
                                <div class="search-container col-lg-6 ">

                                    <div class="pull-right">
                                        <div class="search-field pull-left hide-1340">
                                            <img src="~/Content/images/icons/search-wht.png" />
                                            <input type="text" placeholder="200 results found in 32225" />
                                        </div>

                                        <div class="search-options pull-left">

                                            <a href="#" class="hide show-1340 hide-1050">
                                                <img src="~/Content/images/icons/search-wht.png" />
                                            </a>

                                            <a href="#"><img src="~/Content/images/icons/settings-wht.png" /></a>
                                            <a href="#"><img src="~/Content/images/icons/sort-wht.png" /></a>
                                            <a href="#"><img src="~/Content/images/icons/map-pin-wht.png" /></a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    
                    </div>

                    <div id="content-wrap">
                        @RenderBody()
                    </div>

                    @Scripts.Render("~/bundles/jquery")
                    @Scripts.Render("~/bundles/bootstrap")
                    @RenderSection("scripts", required: false)
</body>
</html>
